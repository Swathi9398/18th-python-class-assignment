3.Code

number=int(input("enter a number"))
if(number==0):
  print("Number is Zero")
elif(number%2==0):
  print("Number is Even")
elif(number%2!=0):
  print("Number is Odd")
else:
  print("Number is not an Integer")

------------------
4.Code

print("A password should follow the given rules")
print("1.The length of the password must be greater than 12 characters")
print("2.It consists of atleast one uppercase letter , one lowercase letter , a numbers  and a symbol")
print("3.Not a word that can be found in a dictionary or the name of a person, character, product")
pass=input("Based on the above criteria ,enter your password")
upper=false
digit=false
symbol=false
lower=false
list="abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
for i in range(len(pass)):
  if(pass[i].islower()):
      lower=true
  if(pass[i].isupper()):
      upper=true
  if(pass[i].isdigit()):
      digit=true
  if(pass[i] not in list):
      symbol=true
if(lower and upper and symbol and digit):
  print("The password is Strong")
else:
  print("The password is Weak")

